<div class="vf-tabs">
  <ul class="vf-tabs__list" data-vf-js-tabs>
    {% for item in tabs %}
    <li class="vf-tabs__item">
      <a class="vf-tabs__link" href="#vf-tabs__section--{{item.tab_number}}">{{item.tab_title}}</a>
    </li>
    {% endfor %}
  </ul>
</div>

